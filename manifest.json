{
  "manifest_version": 3,
  "name": "Webtools Lite",
  "version": "1.0",
  "description": "글자 수 세기, 대소문자 변환 등 간단한 도구들을 제공합니다.",
  "permissions": [
    "contextMenus",
    "scripting",
    "tabs",
    "activeTab",
    "storage",
    "notifications"
  ],
  "host_permissions": ["https://api.projectwj.uk/jusorequest*"],
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "icons": {
    "16": "Ticon16.png",
    "48": "Ticon48.png",
    "128": "Ticon128.png"
  },
  "commands": {
    "count-chars": {
      "suggested_key": {
        "default": "Ctrl+Shift+F"
      },
      "description": "글자 수 세기 실행"
    }
  },
  "options_ui": {
    "page": "src/setting/setting.html",
    "open_in_tab": true
  }
}
