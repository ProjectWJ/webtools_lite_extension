{
  "manifest_version": 3,
  "name": "Web Tools Extension",
  "version": "1.0",
  "description": "글자수 세기, 대소문자 변환 등 간단한 도구 모음",
  "permissions": [
    "contextMenus",
    "scripting",
    "tabs",
    "activeTab",
    "storage",
    "notifications"
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "icons": {
    "16": "Ticon16.png",
    "48": "Ticon48.png",
    "128": "Ticon128.png"
  },
  "commands": {
    "count-chars": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "글자 수 세기 실행"
    }
  },
  "options_page": "src/options/options.html"
}
